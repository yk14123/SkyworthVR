<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首页底部的导航栏样式-->
    <style name="TabRadioButtonWithText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_main_navigation_text_color</item>
        <item name="android:drawablePadding">-2dp</item>
    </style>

    <style name="VideoDetail_TranslucentGreyDialog" parent="@style/AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent
        </item><!-- 设置dialog背景为透明背景 -->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 设置dialog背景不变暗 -->

        <item name="android:windowAnimationStyle">@style/DialogAnimation_BottomSheet</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation_BottomSheet" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_bottom_out</item>
    </style>

    <style name="VrModeMainDialog" parent="@style/AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置dialog背景为透明背景 -->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 设置dialog背景不变暗 -->
    </style>

    <style name="VrModeLinkingDialog" parent="@style/AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent
        </item><!-- 设置dialog背景为透明背景 -->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 设置dialog背景不变暗 -->
    </style>

</resources>