<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:paddingStart="48dp"
    android:paddingEnd="48dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_video_update_image_url"
        android:layout_width="130dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:round="3dp"
        tools:src="#f00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_video_update_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_setting_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_video_update_image_url"
        app:layout_constraintTop_toTopOf="@id/iv_video_update_image_url"
        tools:text="荣宝斋珍藏之《皆山园图卷》" />

    <ProgressBar
        android:id="@+id/pb_video_update"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:progressDrawable="@drawable/video_update_pb_bg_blog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_video_update_title"
        app:layout_constraintTop_toBottomOf="@id/tv_video_update_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_video_update_image_url"
        app:layout_constraintStart_toStartOf="@id/pb_video_update"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_video_update_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3：56"
        android:textColor="@color/color_setting_id_create"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_video_update_image_url"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:text="806MB"
        android:textColor="@color/color_setting_id_create"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_video_update_image_url"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>