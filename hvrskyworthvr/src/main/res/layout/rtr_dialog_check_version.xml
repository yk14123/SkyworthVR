        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_update_pre_cancel"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_check_version_cancel_bg"
            android:gravity="center"
            android:text="@string/check_version_cancel"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_check_version_des"
            app:layout_constraintTop_toBottomOf="@+id/tv_check_version_des" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_status_update_handle"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_check_version_confirm_bg"
            android:gravity="center"
            android:text="@string/check_version_confirm"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_check_version_des"
            app:layout_constraintTop_toBottomOf="@+id/tv_check_version_des" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_status_update_force"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_check_version_confirm_bg"
            android:gravity="center"
            android:text="@string/check_version_confirm"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_check_version_des" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_update_pre_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="bt_status_update_handle,bt_update_pre_cancel" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_update_pre_force"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="bt_status_update_force" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_update_running_root"
        android:layout_width="408dp"
        android:layout_height="285dp"
        android:background="@drawable/shape_check_version_download_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.chinafocus.hvrskyworthvr.util.widget.CircleProgressBar
            android:id="@+id/pc_update_running"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toTopOf="@id/tv_update_running_des"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:radius="32dp"
            app:ringColor="@color/color_ok_enable_start"
            app:strokeWidth="4dp"
            app:textColor="@color/color_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_update_running_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:includeFontPadding="false"
            android:text="@string/check_version_download_des"
            android:textColor="@color/color_white"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@id/bt_update_running_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pc_update_running" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_update_running_cancel"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_check_version_cancel_bg"
            android:gravity="center"
            android:text="@string/setting_status_cancel"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_running_des" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_update_running_ok"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_check_version_pause_bg"
            android:gravity="center"
            android:text="@string/check_version_pause"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/bt_update_running_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bt_update_running_cancel" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_update_running_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="bt_update_running_cancel,bt_update_running_ok" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_update_error_root"
        android:layout_width="408dp"
        android:layout_height="285dp"
        android:background="@drawable/shape_check_version_download_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rtr_check_version_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/check_version_download_error"
            android:textColor="@color/color_white"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appCompatImageView7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_status_error_cancel"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_check_version_cancel_bg"
            android:gravity="center"
            android:text="@string/check_version_cancel"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_status_error_retry"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_check_version_confirm_bg"
            android:gravity="center"
            android:text="@string/check_version_retry"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_update_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="csl_update_pre_root" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_update_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="csl_update_running_root" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_update_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="csl_update_error_root" />

</androidx.constraintlayout.widget.ConstraintLayout>