<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_a80">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_update_pre_root"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rtr_check_version_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.chinafocus.hvrskyworthvr.util.widget.GradientColorTextView
            android:id="@+id/gradientColorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:includeFontPadding="false"
            android:paddingStart="-15dp"
            android:paddingEnd="0dp"
            android:text="@string/check_version_title"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_check_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_check_version_code_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:textColor="@color/color_white"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/gradientColorTextView"
            app:layout_constraintTop_toBottomOf="@id/gradientColorTextView"
            tools:ignore="SmallSp"
            tools:text="V2.0.1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_check_version_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:lineSpacingExtra="10dp"
            android:maxHeight="128dp"
            android:minHeight="74dp"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_version_code"
            tools:text="成都大熊猫繁育研究基地" />
