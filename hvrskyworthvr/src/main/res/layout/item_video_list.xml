<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_video_list_bg"
        android:layout_width="280dp"
        android:layout_height="158dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#f00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_video_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_list_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_video_list_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_video_list_bg"
        tools:text="有一种童话，叫贝加尔湖的冬天" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_video_list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_video_list_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_video_list_bg"
        tools:text="35:45" />

</androidx.constraintlayout.widget.ConstraintLayout>